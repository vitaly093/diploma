max connections = 10
exclude = lost+found/ .gitlab-ci.yml
dont compress   = *.gz *.tgz *.zip *.z *.Z *.rpm *.deb *.bz2 *.rar *.7z *.mp3 *.jpg

[wordpress]
    path = /var/www/html/
    comment = wordpress
    uid = ubuntu
    gid = ubuntu
    read only = no
    list = yes
    auth users = rsync_wordpress
    secrets file = /etc/rsyncd.scrt
    #pre-xfer exec =
    #post-xfer exec =
    hosts allow = localhost 192.168.100.17 192.168.100.20
    hosts deny = *